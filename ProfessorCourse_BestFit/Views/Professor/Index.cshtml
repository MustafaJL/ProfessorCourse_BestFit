@model IEnumerable<ProfessorCourse_BestFit.Models.ViewModels.UserRolesViewModel>

@{
    ViewBag.Title = "Index";
}

<div class="container mb-5">
    <h2 class="text-primary">Users</h2>

    <div class="text-end">
        <p>
            <a class="btn btn-primary" href="/User/Create">
                <i class="bi bi-plus-circle"></i>
                Create
            </a>
        </p>

    </div>

    <table class="table align-middle mb-0 bg-white table-hover" id="table-js">
        <thead class="bg-light">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.FirstName)
                </th>

                <th>
                    @Html.DisplayNameFor(model => model.RoleName)
                </th>
                <th>
                    Actions
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr class="js-row" style="cursor: pointer;">
                    <td>
                        <div class="d-flex align-items-center">
                            <img src="#"
                                 alt=""
                                 style="width: 45px; height: 45px"
                                 class="rounded-circle" />
                            <div class="ms-3">
                                <p class="fw-bold mb-1">
                                    @Html.DisplayFor(modelItem => item.FirstName)
                                    @Html.DisplayFor(modelItem => item.LastName)

                                </p>
                                <p class="text-muted mb-0">
                                    @Html.DisplayFor(modelItem => item.Email)
                                </p>
                            </div>
                        </div>
                    </td>
                    <td>
                        <p class="fw-normal mb-1"> @Html.DisplayFor(modelItem => item.RoleName)</p>
                    </td>

                    <td>
                        <div class="d-flex justify-content-center">
                            <a class="btn btn-success " href="/User/Edit/@item.UserId">
                                <i class="bi bi-pencil"></i>
                               
                            </a>
                            <a href="/Mails/Index/@item.UserId" class="btn btn-primary mx-2">
                                <i class="bi bi-envelope"></i>
                                
                            </a>
                            <button class="btn btn-danger js-delete" uid-data="@item.UserId">
                                <i class="bi bi-trash"></i>
                              
                            </button>
                        </div>
                    </td>
                </tr>

            }
        </tbody>
    </table>
</div>

@section Scripts{

    <script>


        $(document).ready(function () {
            $('#table-js').DataTable();
        });

    $(".js-row .js-delete").on("click", function () {
        let button = $(this);
        Swal.fire({
            title: 'Are you sure?',
            text: "You won't be able to revert this!",
            icon: 'question',
            showCancelButton: true,
            confirmButtonColor: '#3085d6',
            cancelButtonColor: '#d33',
            confirmButtonText: 'Yes, delete it!'
        }).then((result) => {
            if (result.isConfirmed) {

                $.ajax({
                    url: "/api/User?UId=" +  button.attr("uid-data"),
                    method: "Delete",
                    success: function () {
                        Swal.fire(
                            'Deleted!',
                            'Your file has been deleted.',
                            'success'
                        )

                    button.parents(".js-row").fadeOut("slow");

                    },
                    error: function () {
                        Swal.fire(
                            'Not Deleted!',
                            'Can Not Delete This User, Check If There is Any Dependencies',
                            'error'
                        )
                    }

                });


            }
        })



    })
    </script>


}